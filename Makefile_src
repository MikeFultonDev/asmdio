MACDIR=maclib
SRCDIR=src
BLDDIR=obj
DEPDIR=src/deps

archive=asmdio.a

csource := $(shell find $(SRCDIR) -type f -name *.c)
asource := $(shell find $(SRCDIR) -type f -name *.s)
cobjs   := $(patsubst $(SRCDIR)/%,$(BLDDIR)/%,$(csource:.c=.o))
aobjs   := $(patsubst $(SRCDIR)/%,$(BLDDIR)/%,$(asource:.s=.o))
objects := $(cobjs) $(aobjs)
cdeps   := $(patsubst $(SRCDIR)/%,$(DEPDIR)/%,$(csource:.c=.d))

all: $(BLDDIR)/$(archive)

$(BLDDIR)/$(archive): $(objects)
	ar -r $@ $^

clean:
	rm -rf $(objects) $(DEPDIR) $(BLDDIR)/$(archive)

$(DEPDIR)/%.d: $(SRCDIR)/%.c
	mkdir -p $(DEPDIR) ; \
	rm -f $@; \
	clang -MM -MP $(CPPFLAGS) $< > $@;

include $(cdeps)

$(BLDDIR)/%.o: $(SRCDIR)/%.c
	mkdir -p $(BLDDIR) ;
	$(CC) $(CPPFLAGS) $(CFLAGS) -c -o $@ $<

$(BLDDIR)/%.o: $(SRCDIR)/%.s
	mkdir -p $(BLDDIR) ;
	$(AS) $(ASFLAGS) -I$(MACDIR) -o $@ $< >$(@D)/$*.lst

.PHONY: all clean
